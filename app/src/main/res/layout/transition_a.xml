<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="hhhhhhhhhhhhhhhhhhhhhhhhh"/>

    <Button
        android:id="@+id/explode_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_a"
        android:text="explode(code)"/>

    <Button
        android:id="@+id/explode_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/explode_code"
        app:layout_constraintLeft_toRightOf="@+id/explode_code"
        android:text="scene"/>

    <Button
        android:id="@+id/slide_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/explode_code"
        android:text="slide(code)"/>

    <Button
        android:id="@+id/slide_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/slide_code"
        app:layout_constraintLeft_toRightOf="@+id/slide_code"
        android:text="slide(xml)"/>

    <Button
        android:id="@+id/exit_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide_code"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="exit"/>

    <Button
        android:id="@+id/to_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/exit_a"
        android:text="to_recycler"/>

</android.support.constraint.ConstraintLayout>